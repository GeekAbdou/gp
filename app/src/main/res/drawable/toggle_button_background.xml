<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When button is pressed -->
    <item android:drawable="@drawable/toggle_button_pressed" android:state_pressed="true"/>
    <!-- When button is focused -->
    <item android:drawable="@drawable/toggle_button_focused" android:state_focused="true"/>
    <!-- Default state -->
    <item android:drawable="@drawable/toggle_button_normal"/>
</selector>
